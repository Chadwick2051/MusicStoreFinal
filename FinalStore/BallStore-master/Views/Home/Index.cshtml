@{
    ViewData["Title"] = "Home Page";
}
<div class="row">
    <div class="col text-center">
        <h1>Welcome</h1>
        <h3>Get started by picking your favorite genre below!</h3>
        <div class="row ">
            <div class="col">
                <a asp-controller="Song" asp-action="List" asp-route-category="Pop" class="btn btn-secondary btn-lg fs-2 col-11 m-2">Pop</a>
                <a asp-controller="Song" asp-action="List" asp-route-category="Country" class="btn btn-secondary btn-lg fs-2 col-11 m-2">Country</a>
                <a asp-controller="Song" asp-action="List" asp-route-category="Hiphop" class="btn btn-secondary btn-lg fs-2 col-11 m-2">Hiphop</a>
                <a asp-controller="Song" asp-action="List" asp-route-category="Electronic" class="btn btn-secondary btn-lg fs-3 col-11 m-2">Electronic</a>
                <a asp-controller="Song" asp-action="List" asp-route-category="Rock" class="btn btn-secondary btn-lg fs-2 col-11 m-2">Rock</a>
            </div>
            <div class="col">
                <a asp-controller="Song" asp-action="List" asp-route-category="Indie" class="btn btn-secondary btn-lg fs-2 col-11 m-2">Indie</a>
                <a asp-controller="Song" asp-action="List" asp-route-category="R&B" class="btn btn-secondary btn-lg fs-2 col-11 m-2">R&B</a>
                <a asp-controller="Song" asp-action="List" asp-route-category="Jazz" class="btn btn-secondary btn-lg fs-2 col-11 m-2">Jazz</a>
                <a asp-controller="Song" asp-action="List" asp-route-category="Ambient" class="btn btn-secondary btn-lg fs-3 col-11 m-2">Ambient</a>
                <a asp-controller="Song" asp-action="List" asp-route-category="Reggae" class="btn btn-secondary btn-lg fs-2 col-11 m-2">Reggae</a>
            </div>
        </div>
        
    </div>
    <div class="col-7 h-75">
    @* <div class="bg-image col img-fluid" style="background-image: url(/images/Home/1.jpg); height: 100vh"> *@
        <div id="carouselExampleAutoplaying" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="/images/Home/1.jpg" class="d-block w-100" alt="...">
                </div>
                <div class="carousel-item">
                    <img src="/images/Home/2.jpg" class="d-block w-100" alt="...">
                </div>
                <div class="carousel-item">
                    <img src="/images/Home/3.jpg" class="d-block w-100" alt="...">
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </div>
</div>
