@model IEnumerable<Category>

<div class="btn-group">
    <button type="button" class="btn btn-secondary" asp-controller="Song" asp-action="Genres">Genres</button>
    <button type="button" class="btn btn-secondary dropdown-toggle dropdown-toggle-split" data-bs-toggle="dropdown" aria-expanded="false">
        <span class="visually-hidden">Toggle Dropdown</span>
    </button>
    <ul class="dropdown-menu">
        @foreach (var category in Model)
        {
        <li><a asp-controller="Song" asp-action="List" asp-route-category="@category.CategoryName" class="dropdown-item">@category.CategoryName</a></li>
        }
        <li class="divider text-center">---------------</li>
        <li>
            <a asp-controller="Song" asp-action="List" asp-route-category="" class="dropdown-item">View all Songs</a>
        </li>
    </ul>
</div>
