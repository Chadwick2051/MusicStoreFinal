@model Song

<div class="">
    <div class="thumbnail">
        <img src="@Model.SongImageThumbnailUrl" alt="Song Cover" />
        <div class="caption">
            <h3 class="pull-right">@Model.SongPrice.ToString("c")</h3>
            <h3>
                <a class="link-underline-opacity-50 text-black" style="text-decoration : none"
                   asp-controller="Song"
                   asp-action="Details"
                   asp-route-id="@Model.SongId">@Model.SongName</a>
            </h3>
            <p>@Model.Artist</p>
        </div>

        <div class="addToCart">
            <p class="button">
                <a class="btn btn-primary"
                    asp-controller="ShoppingCart" 
                    asp-action="AddToShoppingCart"
                    asp-route-songId="@Model.SongId">
                    Add To Cart
                </a>
            </p>
        </div>
    </div>
</div>