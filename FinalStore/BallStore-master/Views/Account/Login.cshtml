@model LoginViewModel
@{
	ViewData["Title"] = "Login";
}

<h1>Login</h1>
<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<form asp-action="Login" asp-route-returnUrl="@Model.ReturnUrl" method="post">
	<div class="row-mb-2">
		<label class="col-form-label col-md-2">Username:</label>
		<div class="col-md-4">
			<input asp-for="UserName" class="form-control" />
		</div>
		<div class="col">
			<span asp-validation-for="UserName" class="text-danger"></span>
		</div>
	</div>

	<div class="row-mb-2">
		<label class="col-form-label col-md-2">Password:</label>
		<div class="col-md-4">
			<input asp-for="Password" class="form-control" />
		</div>
		<div class="col">
			<span asp-validation-for="Password" class="text-danger"></span>
		</div>
	</div>

	<div class="row-mb-2">
		<div class="col">
			<input type="checkbox" title="Remember Me" asp-for="RememberMe" class="form-check-inline" />
			<label>Remeber Me</label>
		</div>
	</div>
	<br /><br />
	<div class="row">
		<div class="col offset-md-1">
			<button type="submit" class="btn btn-primary">Login</button>
			<a class="btn btn-outline-dark btn-light" asp-action="Index" asp-controller="Home">Cancel</a>
		</div>
	</div>

	<div class="row m-1">
		<div class="col">
			Not Registered?
			<a asp-action="Register">Register as a new user</a>
		</div>
	</div>
</form>
